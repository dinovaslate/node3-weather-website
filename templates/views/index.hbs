<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- Bootstrap CSS -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="../public/css/styles.css" />
    <title>Hello, world!</title>
  </head>
  <body style="background-color: #ececec;">
    {{>navbar}}
    <div
      class="px-4 py-5 text-center"
      style="background-color: #ffff; box-shadow: 0 2px 30px 0px grey"
    >
      <img
        class="d-block mx-auto mb-2"
        src="https://i.pinimg.com/originals/77/0b/80/770b805d5c99c7931366c2e84e88f251.png"
        alt=""
        width="72"
        height="67"
      />
      <h2 class="display-5 fw-bold">Welcome to {{title}}</h2>
      <div class="col-lg-6 mx-auto">
        <p class="lead mb-4">{{content}}</p>
        <div class="d-grid gap-2 d-sm-flex justify-content-sm-center">
          <a type="button" href="/weather" class="btn btn-primary btn-lg px-4 gap-3">Let's
            jump right in</a>
        </div>
      </div>
    </div>
    <div class="b-example-divider"></div>
    {{>footer}}
    <!-- Option 1: Bootstrap Bundle with Popper -->
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
      crossorigin="anonymous"
    ></script>
    <script src="../public/app.js"></script>
  </body>
</html>